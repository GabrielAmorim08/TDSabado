@page "/login"

@using Services;

@inject UserService service
@inject NavigationManager nav

<div class="logregcontainer">
    <div class="registercontainer">
        <p>
            <label>Nome Completo</label>
            <input type="text" @bind-value="@name"/>
        </p>

        <p>
            <label>Senha</label>
            <input type="password" @bind-value="@password"/>
        </p>

        <p>
            <label>Repetir Senha</label>
            <input type="password" @bind-value="@repeatpassword"/>
        </p>

        <p>
            <label>Data de Nascimento</label>
            <input type="date" @bind-value="@birth"/>
        </p>

        <p>
            <label>Nome de Usuario</label>
            <input type="text" @bind-value="@userId"/>
        </p>

        <button onclick="@CreateAccount">
            Criar Conta
        </button>
    </div>
    <div class="logincontainer">
        @if (login != null)
        {
        <p>
            <label>@login</label>
        </p>
        }
        <p>
            <label>Nome de Usuario</label>
            <input type="text" @bind-value="@userId"/>
        </p>

        <p>
            <label>Senha</label>
            <input type="password" @bind-value="@password"/>
        </p>

        <button onclick="@UserLogin">
            Logar
        </button>
    </div>
</div>


@code 
{
    private string name;
    private string password;
    private string repeatpassword;
    private DateTime birth;
    private string userId;
    //string de erro
    private string login;

    public async void CreateAccount()
    {
        await service.Register(
            this.name, 
            this.userId,
            this.birth, 
            this.password);
            
            //deixar os campos em branco
            this.name= "";
            this.userId = "";
            this.birth = DateTime.Now;
            this.password = "";
            this.repeatpassword	 = "";
            //atualizar a tela
            this.StateHasChanged();
    }

    public async void UserLogin()
    {
        var result = await service.Login(
            this.userId,
            this.password
        );
        if (result == null)
        {
            login = "Senha ou login incorretos.";
            StateHasChanged();
            return;
        }
        else
        {
            login= "Logado com sucesso.";
            StateHasChanged();
            nav.NavigateTo("/");
        }
    }
}